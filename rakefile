require "fileutils"
include FileUtils

desc "clean tmp and nginx root"
task :clean do
  Dir.glob '{tmp,root}/*' do |f|
    rm_r f, :verbose => true
  end
end

desc "prepare and config"
task :config do
  sh 'erb nginx.conf.erb > nginx.conf'
  mkdir_p 'tmp', :verbose => true
  mkdir_p 'root', :verbose => true
  mkdir_p 'var', :verbose => true
end