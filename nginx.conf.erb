<% pwd = `pwd`.strip %>

worker_processes 2;
worker_rlimit_nofile 8192;

pid <%= pwd %>/var/nginx.pid;
error_log <%= pwd %>/var/nginx.error.log;

events {
  worker_connections 100; # increase if you have lots of clients
  accept_mutex on;
  <% if RUBY_PLATFORM =~ /linux/ %>
  use epoll;
  <% else %>
  use kqueue; # FreeBSD / OSX
  <% end %>
}

http {
  access_log <%= pwd %>/var/nginx.access.log;
  default_type binary/octet-stream;
  sendfile on;

  upstream app {
    server localhost:9292;
  }

  server {
    listen 80;
    server_name rubygems.org;
    keepalive_timeout 120;
    root <%= pwd %>/root;

    location ^~ /api/ {
      proxy_pass http://rubygems.org;
    }

    location = /gems/ {
      autoindex on;
    }

    location / {
      try_files $uri @app;
    }

    location @app {
      proxy_redirect off;
      proxy_pass http://app;
    }
  }
}
